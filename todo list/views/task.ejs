<title>Task</title>
</head>
<body>
   
  
  <div id="container">
    
        <h1>To-do List <a href="/tasks/new"><i class="fas fa-plus" id ="self"></i></a></h1>
        
        <ul>
          <% for (let task of tasks) {%>  
           
              
                <li><span><form action="/tasks/<%=task._id%>/?_method=delete" method="post"><button><i class="fas fa-trash"></i></button></form></span>
                  <%=task.name.toUpperCase()%>
                  <a href="/tasks/update/<%=task._id%>"><i class="far fa-edit"></i></a>
                </li>
                
              
          <% } %> 
            
        </ul>
      </div>
      
  <script src="app.js"></script>
  


    
</body>
</html>